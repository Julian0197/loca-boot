{
  "compilerOptions": {
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "strict": true,
    "downlevelIteration": true,
    "allowJs": false,
    "declaration": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "types": [
      "reflect-metadata",
      "node",
    ],
    "lib": [
      "es2015",
      "es2020",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
